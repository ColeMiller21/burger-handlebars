<h1 id="title">BURGER TIME</h1>

<div id="image">
    <img src="/assets/img/burger-pic2.png" alt="picture of burger" />
</div>

<div id="wrapper">
    <div id="not-devoured">
        <ul id="not-devoured-list">
            {{#each burger}}
            {{#unless devoured}}
            <li class="burger-list">{{this.burger_name}}
                <button class="change-devoured" data-id="{{id}}" data-eaten="{{devoured}}">
                    {{#unless devoured}}Devour it!!{{/unless}}
                </button>
            </li>
            {{/unless}}
            {{/each}}

        </ul>
    </div>
    <div id="is-devoured">
        <ul id="devoured-list">
            {{#each burger}}
            {{#if devoured}}
            <li class="burger-list">
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}

        </ul>
    </div>
</div>

<form id="create-burger">

    <div class="create-input">
        <input type="text" id="burger-input" name="burger_name">

    </div>
    <div id="button-div">
        <button type="submit" id="submit">Submit</button>
    </div>
    <p>Type in your favorite burger and press Submit!</p>

</form>